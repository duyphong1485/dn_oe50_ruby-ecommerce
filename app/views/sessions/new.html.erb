<% provide :title, t("layouts.header.login") %>
<section class="row-login">
  <div class="col-8 offset-2 mt-4">
    <div class="card">
      <div class="card-header">
        <h1 class="h1_edit"> <%= t(".Login") %> </h1>
      </div>
      <div class="card-body">
        <div class="form-group">
          <%= form_for :sessions, url: login_path do |f| %>
            <div class="mb-3">
              <%= f.label :email, t("accounts.email") %>
              <%= f.email_field :email,placeholder:t("accounts.email_@"), class:"form-control mt-4" %>
            </div>
            <div class="mb-3">
              <%= f.label :password, t("accounts.password") %>
              <%= f.password_field :password, placeholder:t("accounts.password"), class:"form-control mt-4" %>
            </div>
            <div class="card-footer text-muted">
              <%= f.submit t("layouts.header.login"), class: "btn btn-success mt-4 width_edit" %>
            </div>
            <div class="form-check mb-3 mt-2">
              <%= f.label :remember_me do %>
                <%= f.check_box :remember_me%>
                <%= content_tag(:span, t("accounts.sessions.remember_me")) %>
              <% end %>
            </div>
          <% end %>
          <p><%= t "accounts.sessions" %> <%= link_to t("layouts.header.register"), register_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
